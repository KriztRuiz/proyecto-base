{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    /* Target y m칩dulo modernos para Vite */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["DOM", "ESNext"],
    /* JSX autom치ticamente con el runtime de React */
    "jsx": "react-jsx",
    /* Seguridad y consistencia de tipos */
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    /* Importaciones y CommonJS interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    /* Eliminaci칩n de c칩digo muerto */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    /* Tipos globales adicionales */
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
